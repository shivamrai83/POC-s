# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=s3_management
DB_USER=postgres
DB_PASSWORD=your_password_here

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Right-Sizing Configuration
# Minimum bucket size in GB to consider for right-sizing
SIZE_THRESHOLD_GB=100

# Run in dry-run mode (true) or perform actual changes (false)
DRY_RUN=true

# Maximum number of buckets to process in one run
MAX_BUCKETS_TO_PROCESS=10

# Minimum monthly savings threshold in USD to transition an object
MIN_SAVINGS_THRESHOLD=1.0

# Number of objects to process in each batch
BATCH_SIZE=100

